- breadcrumb :user, @user
= breadcrumbs separator: " &rsaquo; ", class: "breadcrumbs"
= render "items/header"

.okay

  .okay__content
    = render "sidetab"

    .okay__content__maintab
      .okay__content__maintab__user
        .okay__content__maintab__user__top
          .okay__content__maintab__user__top__icon
            = image_tag 'member_photo_noimage_thumb2.png', size: "60x60", class: 'icon'
          .okay__content__maintab__user__top__name
            .okay__content__maintab__user__top__name__nametab
            = link_to current_user.nickname, "/users/#{current_user.id}/owner", class: "name-btn"
      .okay__content__maintab__headline
        .okay__content__maintab__headline__title
          マイページ
        .okay__content__maintab__headline__owner
          %p 登録日
          %p= current_user.created_at.strftime("%Y年%m月%d日 %H時%M分")

= render "items/footer"
