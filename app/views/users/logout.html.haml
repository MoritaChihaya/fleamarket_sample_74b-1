= render "posts/header"

.wrapper
  .wrapper__content
    .wrapper__content__sidetab
      %h4
        = link_to "マイページ", "/users/#{current_user.id}", class: "tab"
      %h4 出品する
      %h4 出品した商品-出品中
      %h4 出品した商品-売却済み
      %h4 購入した商品-取引中
      %h4 購入した商品-過去の取引
      %h5 設定
      %h4 本人情報
      %h4 メール/パスワード
      %h4
        = link_to "クレジットカード登録/変更", "/users/#{current_user.id}/credit"
      %h4
        = link_to "ログアウト", "/users/#{current_user.id}/logout"

    .wrapper__content__maintab
      .wrapper__content__maintab__user
        .wrapper__content__maintab__user__top
          .wrapper__content__maintab__user__top__icon
            = image_tag 'member_photo_noimage_thumb2.png', size: "60x60", class: 'icon'
          .wrapper__content__maintab__user__top__name
            .wrapper__content__maintab__user__top__name__nametab
            = link_to current_user.nickname, "/users/#{current_user.id}", class: "name-btn"
      .wrapper__content__maintab__bottons
        .wrapper__content__maintab__bottons__logout-btn
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout-btn"

= render "posts/footer"