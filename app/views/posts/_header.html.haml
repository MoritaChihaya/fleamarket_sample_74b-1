.headerTop_inner
  .headerTop_main
    %h1.icon
      = link_to image_tag'logo.png', size: "140x40"
    .box
      = form_with url: root_path do |f| 
        .box_search 
          = f.text_field :name, class: 'box_search', placeholder: 'キーワードから探す'
          %button{type: "submit", class:'box_search-icon'}
            .box_search-icon
              = link_to image_tag'icon-search 1.png', size: "19x19"
              
  .headerTop_bottom
    %ul.left
      %li.leftitem
        = link_to "カテゴリー"
      %li.leftitem-b
        = link_to "ブランド"
    %ul.right
    - if user_signed_in?
      = link_to "マイページ", "", class: "header__right--btn"
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right--btn"
    - else
      = link_to "ログイン", new_user_session_path, class: "header__right--btn"
      = link_to "新規会員登録", new_user_registration_path, class: "header__right--btn"
      = link_to 'Facebookで登録/ログイン', user_facebook_omniauth_authorize_path, method: :post, class: "header__right--btn"
      = link_to 'Googleで登録/ログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: "header__right--btn"
    = yield