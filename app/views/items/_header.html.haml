%header.pcHeader
  .headerInner
    .mainHeader
      %h1.icon
        = link_to image_tag'logo.png',class:"logo"
      .searchBox
        = form_with url: root_path do |f| 
          .searchBox--input 
            = f.text_field :name, class: 'searchBox--input', placeholder: 'キーワードから探す'
            %button{type: "submit", class:'searchBox--input-icon'}
              .box_search-icon
                = link_to image_tag'icon-search 1.png',class:"serch-icon"
    .nav
      %ul.listsLeft
        %li.listsLeft__item--first
          %a#catBtn{:href => "#"} カテゴリー
          .tree.displayNone
            %ul.categoryTree
